@model IEnumerable<LoginPage1.Models.Publisher>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}


<p>
    <a class= "btn btn-primary" asp-action="Create">Create New Publisher</a>
</p>

    <h2 style="margin-left:20px; text-align:center;">Publisher List</h2>

    <table  class="table table-hover table-dark" style="width:100%; margin-top:25px;">
        <tr>
            <th>PublisherName</th>
        </tr>
         @foreach(var item in Model)
        {
            <tr>
                <td>@item.PublisherName</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.PublisherId">Edit</a> | 
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.PublisherId">Details</a> |
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.PublisherId">Delete</a>
                </td>
            </tr>
        }
    </table>


