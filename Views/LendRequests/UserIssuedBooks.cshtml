@model IEnumerable<LoginPage1.Models.LendRequest>
@{
    ViewData["Title"] = "UserIssuedBooks";
    Layout = "_UserLayout";
}
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor


    <h2 style="margin-top:20px; text-align:center;">Your Issued Books</h2>
    <table class="table table-hover table-dark" style="width:100%; margin-top:25px;" >
        <tr>
            <th>LendId</th>
            <th>BookName</th>
            <th>LendDate</th>
            <th>DueDate</th>
            <th>Status</th>

        </tr>
         @foreach(var item in Model)
        {
            <tr>
                <td>@item.LendId</td>
                <td>@item.Book.BookTitle</td>
                <td>@item.LendDate.ToShortDateString() @item.LendDate.ToString("hh:mm tt") </td>
                <td> @item.LendDate.AddDays(7).ToShortDateString() @item.LendDate.ToString("hh:mm tt")</td>
                <td>
                   <span class="badge badge-pill badge-danger">Not Returned</span>
                </td>
                
            </tr>
        }
    </table>



