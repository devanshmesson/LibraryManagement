
@{
    ViewData["Title"] = "_LoginView";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LoginPage1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

     <style>

       
        .Home 
        {
            display: flex;
            width: 100%;
            height: 200px;
            margin-left: auto;
            margin-right: auto;
        }
       .Home > img
       {
          
          width:13%;
          height: 130px;
          margin-right: auto; 
          margin-left:auto;
       }
        .caption 
        {
            display: flex;
            width: 100%;
            
            margin-left: auto;
            margin-right: auto;
            
        }
        .caption>p
        {
          width:33%;
          margin-left: auto;
          margin-right: auto; 
         
          text-align:center;
        }
        .caption>h5
        {
          width:33%;
          margin-left: auto;
          margin-right: auto; 
          text-align:center;
        }
        .dark-mode {
  background-color: #353935;
  color: white;
}
       /* html, body {
      max-width: 100%;
      overflow-x: hidden;
      }*/
    </style>

</head>
<body>
    <div style=" width:100%; display: inline-block;">
        <img src="/imgs/books.png" style="width:40px; height:40px; float:left;"/>
        <h4 style="margin-top:8px; float:left; font-family:Verdana">E-Library</h4>
         @Html.ActionLink("Login","Login","Accounts",null,new{@class="btn btn-primary",@style="float:right; margin-right:20px; margin-top:5px; width:80px;"})     
         <button class="btn btn-dark"style="margin-top:5px; float:right; margin-right:10px;" onclick="myFunction()">Dark Mode</button>
    </div>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   <script>
    function myFunction() 
    {
       var element = document.body;
       element.classList.toggle("dark-mode");

    }
   </script>
   
</body>
</html>
