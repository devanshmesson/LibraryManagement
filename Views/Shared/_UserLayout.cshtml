
@{
    ViewData["Title"] = "_UserLayout";
}
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LoginPage1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>LMS</title>
    <link rel="stylesheet" href="assets/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

   <style>
         .card1
         {
             /*width:33%;*/
             border-radius: 8px;
             /*margin: 2em 1em;*/
             /*margin-left: 3em;*/
             float: left;
             text-align: center;

         }
         .tabs {
             float: right;
             margin-left: 10px;
             margin-top: 0px;
             
         }
         form > button {
            
             font-family: Verdana;
             font-size: 16px;
             color:antiquewhite;
             border:0px #000030;
             font: white;
             background:#000030;
             margin-top:9px;
            
         }
      table,th,td
      {
          border: 1px solid black;
      }
        .tablestyle
        {
         table-layout: fixed;
         width: 100%;  
         margin-top:25px;
         empty-cells: hide;
        }
        .dark-mode {
         background-color: #353935;
         color: white;
         }
        
     </style>
</head>


<body>
      <div style=" width:100%; display: inline-block; ">
        <img src="/imgs/books.png" style="width:40px; height:40px; float:left;"/>
        <h4 style="margin-top:8px; float:left; font-family:Verdana">E-Library</h4>
        <h5 style="margin-top:12px; margin-left:25px; display: inline-block; float:left">Hello, @HttpContextAccessor.HttpContext.Session.GetString("Username")!</h5>
        <button class="btn btn-dark"style="margin-top:3px; float:left; margin-left:15px;" onclick="myFunction()">Dark Mode</button>
        <div style="border-radius:1rem; height:45px;  background-color: #000030; display: inline-block; float:right; margin-top:4px; margin-right:5px;">
         <form  class="tabs">
            <button asp-controller="Home" asp-action="Index">Logout</button>
        </form>
         <form class="tabs">
            <button asp-controller="LendRequests" asp-action="UserRecords">Records</button>
        </form>
         <form class="tabs">
            <button asp-controller="Books" asp-action="BookUser">View Books</button>
        </form>
       
        <form class="tabs">
            <button asp-controller="LendRequests" asp-action="UserIssuedBooks">Issued Books</button>
        </form>
     </div>
      
    </div>
    
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script>
    function myFunction() 
    {
       var element = document.body;
       element.classList.toggle("dark-mode");
    }
   </script>
   
</body>
</html>
