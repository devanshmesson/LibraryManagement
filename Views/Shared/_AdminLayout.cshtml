
@{
    ViewData["Title"] = "View";
}


<!DOCTYPE html>
<html lang="en">
<head>
       
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LoginPage1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
         .tabs {
             float: right;
             margin-left: 10px;
             margin-top: 0px;
             
         }
         form > button {
            
             font-family: Verdana;
             font-size: 16px;
             color:antiquewhite;
             border:0px #000030;
             font: white;
             background:#000030;
             margin-top:9px;
            
         }
      table,th,td
      {
          border: 1px solid black;
      }
        .tablestyle
        {
         table-layout: fixed;
         width: 100%;  
         margin-top:25px;
         empty-cells: hide;
        }
        .dark-mode {
         background-color: #353935;
         color: white;
         }
        
     </style>
</head>
<body>
    <div style=" width:100%; display: inline-block;">
        <img src="/imgs/books.png" style="width:40px; height:40px; float:left;"/>
        <h4 style="margin-top:8px; float:left; font-family:Verdana">E-Library</h4>
        <h5 style="margin-top:12px; margin-left:15px; display: inline-block; float:left">Hello, Admin</h5>
        <button class="btn btn-dark"style="display: inline-block; margin-top:3px; float:left; margin-left:9px;" onclick="myFunction()">Dark</button>
        <div style=" border-radius:1rem; height:45px;  background-color: #000030; display: inline-block; float:right; margin-top:4px; margin-right:3px;">
        <form class="tabs">
         <button  asp-controller="Home" asp-action="Index">Logout</button>
         </form>
         <form class="tabs">
             <button  asp-controller="LendRequests" asp-action="LendReturnBooks">Lend/Return History</button>
         </form>
         <form class="tabs">
             <button asp-controller="LendRequests" asp-action="LentBooks">Lent Books</button>
         </form>
         <form class="tabs">
             <button asp-controller="LendRequests" asp-action="AdminDashboard">Request List</button>
         </form>
         <form class="tabs" >
             <button asp-controller="Accounts" asp-action="Index">Users</button>
         </form>
         <form class="tabs">
             <button asp-controller="Publishers" asp-action="Index">Publishers</button>
         </form>

         <form class="tabs">
             <button asp-controller="Authors" asp-action="Index">Authors</button>
         </form>

         <form class="tabs">
             <button asp-controller="Books" asp-action="Index">Book Inventory</button>
         </form>
     </div>

    </div>

  
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
     <script>
    function myFunction() 
    {
       var element = document.body;
       element.classList.toggle("dark-mode");
    }
   </script>
   
</body>
</html>
