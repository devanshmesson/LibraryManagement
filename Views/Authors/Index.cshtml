@model IEnumerable<LoginPage1.Models.Author>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<p>
    <a class= "btn btn-primary" asp-action="Create">Create New Author</a>
</p>

    <h2 style="margin-top:20px; text-align:center;">Author List</h2>


    <table  class="table table-hover table-dark" style="width:100%; margin-top:25px;">
        <tr>
            <th>AuthorName</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.AuthorName</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.AuthorId">Edit</a> | 
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.AuthorId">Details</a> | 
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.AuthorId">Delete</a>
                </td>
            </tr>
        }
    </table>


