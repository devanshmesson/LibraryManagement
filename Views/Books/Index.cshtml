@model IEnumerable<LoginPage1.Models.Book>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<p>
    <a class= "btn btn-primary" asp-action="Create">Create New Book</a>
</p>


    <h2 style=" margin-top:20px; text-align:center;">Book Inventory</h2>


    <table  class="table table-hover table-dark" style="width:100%; margin-top:25px;">
        <tr>
            <th>Book Title</th>
            <th>NoOfCopies Available</th>
            <th>AuthorInfo</th>
            <th>PublisherInfo</th>
            <th>Category</th>
            <th>ImageURL</th>
            <th>IssuedBooks</th>
            <th>IsAvailable</th>
        </tr>
          @foreach(var item in Model)
        {
            <tr>
                 <td>@item.BookTitle</td>
                 <td>@item.NoOfCopies</td>
                 <td>@item.AuthorId</td>
                 <td>@item.PublisherId</td>
                 <td>@item.Category</td>
                 <td>@item.ImageUrl</td>
                 <td>@item.IssuedBooks</td>
                 <td>@item.IsAvailable</td>
                 
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.BookId">Edit</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.BookId">Details</a>
                    <a style="margin-top:2px; "class="btn btn-primary" asp-action="Delete" asp-route-id="@item.BookId">Delete</a>
                </td>
            </tr>
        }
        
    </table>


    
